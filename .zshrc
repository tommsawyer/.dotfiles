[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

eval "$(jump shell)"

export RIPGREP_CONFIG_PATH=$HOME/.ripgreprc

cdf() {
   local file
   local dir
   file=$(fzf +m -q "$1") && dir=$(dirname "$file") && cd "$dir"
}

